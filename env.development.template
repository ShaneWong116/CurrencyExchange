# ============================================
# Exchange System - 开发环境配置模板
# 使用方法: 复制此文件为 .env 用于开发环境
# cp env.development.template .env
# ============================================

APP_NAME="Exchange System (Dev)"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

# ============================================
# 日志配置
# ============================================
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ============================================
# 数据库配置 - 开发环境
# 重要: 开发环境使用 data/dev/database.sqlite
# 此路径将通过Docker volume映射到容器内的 /var/www/html/database/database.sqlite
# ============================================
DB_CONNECTION=sqlite
DB_DATABASE=database/database.sqlite

# ============================================
# 队列配置
# ============================================
QUEUE_CONNECTION=database

# ============================================
# 缓存配置
# ============================================
CACHE_DRIVER=file
FILESYSTEM_DISK=local
SESSION_DRIVER=file
SESSION_LIFETIME=120

# ============================================
# CORS配置
# ============================================
SANCTUM_STATEFUL_DOMAINS=localhost,127.0.0.1
SESSION_DOMAIN=localhost

# ============================================
# 前端配置
# ============================================
VITE_APP_NAME="${APP_NAME}"

